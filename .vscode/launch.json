{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug AVA test file",
      "program": "${workspaceFolder}/node_modules/ava/entrypoints/cli.mjs",
      "args": [
        "--serial",
        "${file}"
      ],
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
      "preLaunchTask": "npm: build"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug AVA test file (skip build)",
      "program": "${workspaceFolder}/node_modules/ava/entrypoints/cli.mjs",
      "args": [
        "--serial",
        "${file}"
      ],
      "outputCapture": "std",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    }
  ]
}
