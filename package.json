{
  "name": "qieyun",
  "version": "0.15.0-beta.2",
  "description": "A JavaScript library for the Qieyun phonological system",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "run-p build:*",
    "build:rollup": "rollup -c",
    "build:types": "npm-dts generate",
    "build:test": "tsc -p tsconfig.test.json",
    "fix": "run-s fix:*",
    "fix:format": "prettier 'src/**/*.ts' --write",
    "fix:lint": "eslint 'src/**/*.ts' --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src",
    "test:format": "prettier src --list-different",
    "test:unit": "nyc --silent ava",
    "check-cli": "run-s test diff-integration-tests check-integration-tests",
    "check-integration-tests": "run-s check-integration-test:*",
    "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
    "watch:build-tests": "tsc -p tsconfig.test.json -w",
    "watch:test": "nyc --silent ava --watch",
    "cov": "run-s build test:unit cov:html cov:lcov && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "cov:send": "run-s cov:lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html && open-cli docs/index.html",
    "doc:html": "typedoc src/index.ts --out docs",
    "doc:json": "typedoc src/index.ts --json docs/typedoc.json",
    "reset-hard": "git clean -dfx && git reset --hard && npm i",
    "prepare-release": "run-s reset-hard test cov:check doc:html"
  },
  "engines": {
    "node": "^18.18 || ^20.9 || ^21 || >=22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nk2028/qieyun-js.git"
  },
  "keywords": [
    "Qieyun",
    "historical linguistics",
    "linguistics",
    "middle Chinese"
  ],
  "author": "Project NK2028",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nk2028/qieyun-js/issues"
  },
  "homepage": "https://github.com/nk2028/qieyun-js#readme",
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.6.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/eslint__js": "^8.42.3",
    "ava": "^6.1.3",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "npm-dts": "^1.3.13",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.0.0",
    "open-cli": "^8.0.0",
    "prettier": "^3.3.2",
    "rollup": "^4.18.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "typedoc": "^0.26.3",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0"
  },
  "files": [
    "index.js",
    "index.js.map",
    "index.d.ts",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/test/"
      },
      "compile": false
    },
    "files": [
      "!build/esnext/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
