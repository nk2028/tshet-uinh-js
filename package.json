{
  "name": "tshet-uinh",
  "version": "0.16.0-beta.1",
  "description": "A JavaScript library for the Qieyun phonological system",
  "main": "dist/tshet-uinh.js",
  "module": "dist/tshet-uinh.esm.js",
  "types": "dist/tshet-uinh.d.ts",
  "exports": {
    ".": {
      "types": "./dist/tshet-uinh.d.ts",
      "import": "./dist/tshet-uinh.esm.js",
      "default": "./dist/tshet-uinh.js"
    }
  },
  "scripts": {
    "build": "run-p build:*",
    "build:rollup": "rollup -c",
    "build:types": "npm-dts generate -o dist/tshet-uinh.d.ts",
    "build:test": "tsc -p tsconfig.test.json",
    "fix": "run-s fix:*",
    "fix:format": "dprint fmt 'src/**/*.ts'",
    "fix:lint": "eslint 'src/**/*.ts' --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint src",
    "test:format": "dprint check --list-different src/**/*.ts",
    "test:unit": "nyc --silent ava",
    "watch:build-tests": "tsc -p tsconfig.test.json -w",
    "watch:test": "nyc --silent ava --watch",
    "cov": "run-s build test:unit cov:html cov:lcov && open-cli coverage/index.html",
    "cov:html": "nyc report --reporter=html",
    "cov:lcov": "nyc report --reporter=lcov",
    "cov:send": "run-s cov:lcov && codecov",
    "cov:check": "nyc report && nyc check-coverage --lines 100 --functions 100 --branches 100",
    "doc": "run-s doc:html && open-cli docs/index.html",
    "doc:html": "typedoc src/index.ts --out docs",
    "doc:json": "typedoc src/index.ts --json docs/typedoc.json",
    "reset-hard": "git clean -dfx && git reset --hard && npm i",
    "prepare-release": "run-s reset-hard test cov:check doc:html"
  },
  "engines": {
    "node": "^18.18 || ^20.9 || ^21 || >=22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nk2028/tshet-uinh-js.git"
  },
  "keywords": [
    "historical-linguistics",
    "linguistics",
    "middle-chinese",
    "qieyun"
  ],
  "author": "Project NK2028",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nk2028/tshet-uinh-js/issues"
  },
  "homepage": "https://github.com/nk2028/tshet-uinh-js#readme",
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
    "@eslint/js": "^9.22.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/node": "^22.13.10",
    "ava": "^6.2.0",
    "dprint": "^0.49.0",
    "eslint": "^9.22.0",
    "eslint-import-resolver-typescript": "^3.8.7",
    "eslint-plugin-import": "^2.31.0",
    "npm-dts": "^1.3.13",
    "npm-run-all": "^4.1.5",
    "nyc": "^17.1.0",
    "open-cli": "^8.0.0",
    "rollup": "^4.35.0",
    "tslib": "^2.8.1",
    "typedoc": "^0.27.9",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "files": [
    "dist"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/test/"
      },
      "compile": false
    },
    "files": [
      "!build/esnext/**"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "exclude": [
      "**/*.spec.js"
    ]
  }
}
